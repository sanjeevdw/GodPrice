<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#eaecea">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:background="#fff">

            <TextView
                android:id="@+id/textView"
                android:layout_width="129dp"
                android:layout_height="41dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="30dp"
                android:text="Your Balance"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="70dp"
                android:fontFamily="sans-serif-light"
                android:shadowColor="@color/colorAccent"
                android:text="THB $329.00"
                android:textColor="@color/colorAccent"
                android:textSize="40dp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="265dp"
            android:background="#fff">

            <TextView
                android:id="@+id/textView"
                android:layout_width="237dp"
                android:layout_height="37dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:text="Enter Amount To Deposite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="557dp"
                android:layout_height="133dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THB $:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:outlineAmbientShadowColor="@color/cardview_light_background"
                    android:outlineSpotShadowColor="@color/cardview_light_background"
                    android:shadowColor="@color/cardview_light_background"
                    android:text="" />


            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="95dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="DEPOSIT"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />


        </android.support.v7.widget.CardView>


    </android.support.v7.widget.CardView>
</LinearLayout>